generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Job {
  id           String   @id @default(uuid())
  learningRate Float
  batchSize    Int
  epoch        Int
  status       String // "pending", "running", "done", "failed"
  accuracy     Float?
  duration     Float?
  createdAt    DateTime @default(now())
  logs         Log[]
}

model Log {
  id        String @id @default(uuid())
  jobId     String
  epoch     Int
  trainLoss Float
  valLoss   Float
  accuracy  Float
  time      Float
  Job       Job    @relation(fields: [jobId], references: [id])
}
